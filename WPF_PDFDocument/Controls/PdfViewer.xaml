<UserControl x:Class="WPF_PDFDocument.Controls.PdfViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_PDFDocument.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition Height="20">
            </RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" PanningMode="Both" Background="DarkGray">
            <ItemsControl x:Name="PagesContainer" MouseDown="PagesContainer_MouseDown" MouseWheel="PagesContainer_MouseWheel">
            </ItemsControl>
        </ScrollViewer>
       
        <ComboBox Name="Pages" Grid.Row="1" HorizontalAlignment="Center" Width="100" SelectedIndex="0"></ComboBox>
        <Slider Grid.Row="1" Name="slider" HorizontalAlignment="Right" Width="100" Minimum="0.5" Maximum="2" LargeChange="0.2" Value="1">
        </Slider>
    </Grid>
</UserControl>
